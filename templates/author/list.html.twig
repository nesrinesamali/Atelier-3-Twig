<h1>Liste des auteurs</h1>


    {% if authors is not empty and authors is defined  %}
        <ul>
            {% set nb_totals_livres= 0 %}
            {% for key, author in authors %}
                <li>
                    <img src="{{ asset(author.picture) }}" >
                    <h2>{{ author.username|upper }}</h2>
                    <p>Email: {{ author.email }}</p>
                    <p>Number of Books: {{ author.nb_books }}</p>
                    <a href="{{ path('auhtorDetails', {'id': author.id}) }}">DÃ©tails</a>
                    
                </li>
                {% set nb_totals_livres = nb_totals_livres + author.nb_books %}
            {% endfor %}
        </ul>
        <p>Nombre des auteurs: {{ authors|length }}</p>
        <p>Nombre total des livres: {{ nb_totals_livres }}</p>
    {% else %}
        <p>Il n'y a aucun auteur.</p>
    {% endif %}